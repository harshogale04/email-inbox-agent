{
  "manifest_version": 3,
  "name": "Smart Inbox AI",
  "description": "Categorize and summarize your Gmail inbox with AI.",
  "version": "1.0",
  "permissions": ["identity", "tabs", "storage", "activeTab"],
  "host_permissions": ["http://localhost:3000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
